{% extends 'base.html.twig' %}

{% block content_header %}
    <h1>
        {{ project.title }}
        <small>Manage your user stories and generate diagrams</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="{{ path('projects') }}"><i class="fa fa-book"></i> Projects</a></li>
        <li class="active">{{ project.title }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">User Stories</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Title</th>
                            </tr>
                            {% set no = 1 %}
                            {% for story in project.userStories %}
                                <tr>
                                    <td>{{ no }}</td>{% set no = no + 1 %}
                                    <td>{{ story.title }}</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                </div>
            </div>
            <!-- /.box -->
        </div>
        <din class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">Generate a Diagram</h4>
                </div>
                <div class="box-body">
                    <a class="btn btn-app" href="{{ path('use-case-generation', {id: project.id}) }}">
                        <i class="fa fa-commenting"></i> Use case
                    </a>
                    <a class="btn btn-app" href="#">
                        <i class="fa fa-exchange"></i> Activity
                    </a>
                </div>
            </div>
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-check"></i> Error!</h4>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-check"></i> Success!</h4>
                    {{ message }}
                </div>
            {% endfor %}
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">Diagrams</h4>
                </div>
                <div class="box-body">
                    {% for diagram in project.useCaseDiagrams %}
                        <img src="{{ asset(diagram.file) }}" alt="{{ diagram.title }}" width="24%">
                    {% endfor %}
                </div>
            </div>
        </din>
    </div>
{% endblock %}
