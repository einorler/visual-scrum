{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Visual</b>SCRUM</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="form-group has-feedback">
                    <input type="text" name="_username" value="{{ last_username }}"  class="form-control" placeholder="Username">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="_password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8"></div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" name="_submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <a href="{{ path('fos_user_registration_register') }}" class="text-center">Register a new membership</a>

        </div>

        {% if error is not null %}
            <div class="alert alert-danger alert-dismissible" style="margin-top: 20px">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-check"></i> Error!</h4>
                {{ error.message }}
            </div>
        {% endif %}
        <!-- /.login-box-body -->
    </div>
{% endblock fos_user_content %}
